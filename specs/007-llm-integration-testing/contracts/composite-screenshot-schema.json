{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/sbroenne/mcp-windows/specs/007-llm-integration-testing/contracts/composite-screenshot-schema.json",
  "title": "Composite Screenshot Metadata Schema",
  "description": "JSON Schema for composite screenshot metadata accompanying all-monitors captures",
  "type": "object",
  "required": ["captureTime", "virtualScreen", "monitors"],
  "properties": {
    "captureTime": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when screenshot was captured"
    },
    "virtualScreen": {
      "$ref": "#/$defs/virtualScreenBounds",
      "description": "Bounding rectangle of all monitors in virtual screen coordinates"
    },
    "monitors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/monitorRegion"
      },
      "minItems": 1,
      "description": "Position and size of each monitor within the composite image"
    },
    "imageWidth": {
      "type": "integer",
      "minimum": 1,
      "description": "Width of the composite image in pixels"
    },
    "imageHeight": {
      "type": "integer",
      "minimum": 1,
      "description": "Height of the composite image in pixels"
    },
    "includedCursor": {
      "type": "boolean",
      "default": false,
      "description": "Whether the mouse cursor was included in the capture"
    },
    "cursorPosition": {
      "$ref": "#/$defs/point",
      "description": "Cursor position within the composite image (if includedCursor is true)"
    }
  },
  "$defs": {
    "virtualScreenBounds": {
      "type": "object",
      "required": ["x", "y", "width", "height"],
      "properties": {
        "x": {
          "type": "integer",
          "description": "Left edge in virtual screen coordinates (can be negative)"
        },
        "y": {
          "type": "integer",
          "description": "Top edge in virtual screen coordinates (can be negative)"
        },
        "width": {
          "type": "integer",
          "minimum": 1,
          "description": "Total width spanning all monitors"
        },
        "height": {
          "type": "integer",
          "minimum": 1,
          "description": "Total height spanning all monitors"
        }
      }
    },
    "monitorRegion": {
      "type": "object",
      "required": ["index", "x", "y", "width", "height", "isPrimary"],
      "properties": {
        "index": {
          "type": "integer",
          "minimum": 0,
          "description": "Monitor index (0-based)"
        },
        "x": {
          "type": "integer",
          "description": "X position of this monitor within the composite image"
        },
        "y": {
          "type": "integer",
          "description": "Y position of this monitor within the composite image"
        },
        "width": {
          "type": "integer",
          "minimum": 1,
          "description": "Width of this monitor in pixels"
        },
        "height": {
          "type": "integer",
          "minimum": 1,
          "description": "Height of this monitor in pixels"
        },
        "isPrimary": {
          "type": "boolean",
          "description": "Whether this is the primary monitor"
        },
        "deviceName": {
          "type": "string",
          "description": "Windows device name (e.g., '\\\\.\\DISPLAY1')"
        }
      }
    },
    "point": {
      "type": "object",
      "required": ["x", "y"],
      "properties": {
        "x": {
          "type": "integer",
          "description": "X coordinate"
        },
        "y": {
          "type": "integer",
          "description": "Y coordinate"
        }
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "captureTime": "2025-12-08T14:30:01.234Z",
      "virtualScreen": {
        "x": -1920,
        "y": 0,
        "width": 5760,
        "height": 1440
      },
      "monitors": [
        {
          "index": 0,
          "x": 1920,
          "y": 0,
          "width": 1920,
          "height": 1080,
          "isPrimary": true,
          "deviceName": "\\\\.\\DISPLAY1"
        },
        {
          "index": 1,
          "x": 0,
          "y": 0,
          "width": 1920,
          "height": 1080,
          "isPrimary": false,
          "deviceName": "\\\\.\\DISPLAY2"
        },
        {
          "index": 2,
          "x": 3840,
          "y": 0,
          "width": 1920,
          "height": 1080,
          "isPrimary": false,
          "deviceName": "\\\\.\\DISPLAY3"
        }
      ],
      "imageWidth": 5760,
      "imageHeight": 1440,
      "includedCursor": true,
      "cursorPosition": {
        "x": 2500,
        "y": 540
      }
    }
  ]
}
